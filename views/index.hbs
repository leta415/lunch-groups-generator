<div class='container'>
    <button id='newLunchGroupsButton' type='button' class="btn btn-primary">
        Give me new lunch groups
    </button>

    <h3> Current lunch groups </h3>

    <div class='flexcontainer'>
        {{# each lunchgroups}}
            <div class="card" style="width: 20rem;">
                <div class="card-block">
                    <h4 class="card-title">Group {{@index}}</h4>
                </div>
                <ul class="list-group list-group-flush">
                    {{#members}}
                        <li class="list-group-item">{{person}}</li>
                    {{/members}}
                </ul>
            </div>
        {{/each}}
    </div>

</div>
<script src="/javascripts/my.js"></script> 